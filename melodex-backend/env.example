# Spotify OAuth
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3001/auth/spotify/callback

# MongoDB
MONGODB_URI=mongodb://localhost:27017/melodex
# For production: mongodb+srv://username:password@cluster.mongodb.net/melodex

# JWT
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Server
PORT=3001
NODE_ENV=development

# YouTube API (optional - for song previews)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Last.fm API (optional - for additional music info)
LASTFM_API_KEY=your_lastfm_api_key_here 