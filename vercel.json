{
  "version": 2,
  "builds": [
    {
      "src": "Melodex/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Melodex/dist"
      }
    },
    {
      "src": "melodex-backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/melodex-backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/Melodex/$1"
    }
  ],
  "functions": {
    "melodex-backend/server.js": {
      "maxDuration": 30
    }
  }
} 